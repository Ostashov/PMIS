<% include layout/header.ejs %>

  <div class="main">
    <div class="container">
      <div class="content">
        <div class="col-md-12">
          <h3>Приём пациента <span class="badge badge-primary">Выбор пациента</span></h3>
          <div class="row">
            <div class="col-md-6">
              <div class="card">
                <div class="card-header">Поиск пациента</div>
                <div class="card-body">
                  <form class="searchPatientForm" action="">
                    <div class="form-row">
                      <div class="form-group col-md-9">
                        <label for="inputFindLastnamePatient">Фамилия</label>
                        <input type="text" id="inputFindLastnamePatient" class="form-control" placeholder="Фамилия" >
                      </div>
                    </div>
                    <div class="form-row">
                      <div class="form-group col-md-4">
                        <label for="selectTypeOfDocument" >Тип документа</label>
                        <select type="email" id="selectTypeOfDocument" class="form-control" name="documentType" disabled>
                          <% listOfDocumentTypes.forEach(function(documentType){ %>
                            <option value="<%= documentType.id %>"><%= documentType.title %></option>
                          <% }); %>
                        </select>
                      </div>
                      <div class="form-group col-md-5">
                        <label for="inputNumberOfDocument" >Номер документа</label>
                        <input type="text" id="inputNumberOfDocument" class="form-control" placeholder="Номер документа" disabled>
                      </div>
                    </div>
                    <button id="searchPatientButton" class="btn btn-primary">Поиск</button>
                    <button id="showAddPatientFormButton" class="btn btn-outline-primary" type="button" data-toggle="collapse" data-target="#addPatientFormCard" >Добавить нового пациента</button>
                  </form>
                </div>
              </div>
              <div class="collapse" id="addPatientFormCard">
                <div class="card" >
                  <div class="card-header">Добавление нового пациента</div>
                  <div class="card-body">
                    <form method="POST" action="api/patient/new" class="addPatientForm">
                      <div class="form-row">
                        <div class="form-group col-md-8">
                          <label for="inputAddPatientLastname" class="sr-only" >Фамилия</label>
                          <input type="text" id="inputAddPatientLastname" class="form-control" name="lastname" placeholder="Фамилия" >
                        </div>
                        <div class="form-group col-md-4">
                          <label for="inputAddPatientFirstname" class="sr-only" >Имя</label>
                          <input type="text" id="inputAddPatientFirstname" class="form-control" name="firstname" placeholder="Имя" >
                        </div>
                      </div>
                      <div class="form-row">
                          <div class="form-group col-md-2">
                            <label for="addPatientBirthDay">День</label>
                            <input type="text" id="addPatientBirthDay" class="form-control" name="birthday" placeholder="dd" >
                          </div>
                          <div class="form-group col-md-2">
                            <label for="addPatientBirthMonth">Месяц</label>
                            <input type="text" id="addPatientBirthMonth" class="form-control" name="birthmonth" placeholder="mm" >
                          </div>
                          <div class="form-group col-md-3">
                            <label for="addPatientBirthYear">Год</label>
                            <input type="text" id="addPatientBirthYear" class="form-control" name="birthyear" placeholder="yyyy" >
                          </div>
                      </div>
                      <button type="submit" id="addPatientFormButton" class="btn btn-primary" >Начать приём</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
            <div class="listOfPatients col-md-6">
              <div class="card">
                <div class="card-header">Список пациентов</div>
                <div class="card-body">
                  <ul >
                    <% listOfPatients.forEach(function(patient){ %>
                    <li >
                      <%= patient.lastname %> <%= patient.firstname %> <%= patient.middlename[0] %>. </br>
                      <%= new Date(Date.parse(patient.birthdate)).getFullYear(); %> г.р.
                    </li>
                    <br>
                    <% }); %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
    
<% include layout/footer.ejs %>