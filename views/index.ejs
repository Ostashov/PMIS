<% include layout/header.ejs %>

  <div class="main">
    <div class="container">
      <div class="content">
        <div class="row">
          <% if (!user.id) { %>
          <div class="col-md-12">
            <div class="card">
              <div class="card-body">
                Пожалуйста, <a href="/signin" >авторизуйтесь</a>.
              </div>
            </div>
            <% }%>
          </div>
          <% if (user.id) { %>
          <div class="col-md-12">
            <a href="/visit" class="btn btn-primary" >Приём пациента</a>
          </div>
          <% }%>
        </div>
        <div class="row">
          <div class="col-md-12" hidden>
            <div class="card" style="margin-top: 15px;">
              <div class="card-header">Список всех пользователей</div>
              <div class="card-body">
                <ul>
                <% users.forEach(function(user){ %>
                  <li>
                    ID: <%= user.id %> <br>
                    Email: <%= user.email %> <br>
                    Имя: <%= user.firstname %> <br>
                    Фамилия: <%= user.lastname %>
                  </li>
                  <% }); %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
    
<% include layout/footer.ejs %>